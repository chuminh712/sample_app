<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".sample_app"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to current_user.name, user_path(current_user.id),
            class: "dropdown-toggle", "data-toggle": "dropdown" %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t(".log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
        <li><%= link_to t(".en"), locale: :en %></li>
        <li><%= link_to t(".vi"), locale: :vi %></li>
      </ul>
    </nav>
  </div>
</header>
