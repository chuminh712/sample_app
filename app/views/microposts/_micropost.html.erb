<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size:
    Settings.link.index_avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.posted" %>
    <%= time_ago_in_words micropost.created_at %> <%= t "microposts.ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("users.user.delete"), micropost, method: :delete,
        data: { confirm: t("users.user.you_sure") } %>
    <% end %>
  </span>
</li>
